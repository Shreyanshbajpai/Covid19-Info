<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFrag">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        app:cardElevation="5dp"


        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cases"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:padding="5dp"

                android:id="@+id/totalCase"
                >

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:fontFamily="@font/lato_bolditalic"
                android:textSize="20sp"
                android:padding="5dp"

                android:id="@+id/totalCaseN"
                android:layout_alignParentRight="true"
                >

            </TextView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total death"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/redColor"
                android:padding="5dp"

                android:id="@+id/totalDeath"
                android:layout_below="@+id/totalCase"
                >

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:fontFamily="@font/lato_bolditalic"
                android:textSize="20sp"
                android:padding="5dp"

                android:id="@+id/totalCaseD"

                android:textColor="@color/redColor"
                android:layout_below="@+id/totalCase"

                android:layout_alignParentEnd="true"
                >

            </TextView>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Recovered"
                android:fontFamily="@font/lato_bold"
                android:textSize="20sp"
                android:textColor="@color/greenColor"
                android:padding="5dp"

                android:id="@+id/totalRec"
                android:layout_below="@+id/totalDeath"
                >

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:fontFamily="@font/lato_bolditalic"
                android:textSize="20sp"
                android:padding="5dp"
                android:id="@+id/totalCaseR"

                android:textColor="@color/greenColor"
                android:layout_below="@+id/totalDeath"
                android:layout_alignParentEnd="true"
                >

            </TextView>


        </RelativeLayout>






    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/back_solid"

        >



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/greenColor"
            >




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:textSize="20sp"
                android:id="@+id/qOne"
                android:textColor="#ffffff"
                android:text="What is covid-19?"
                >

            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:textSize="16sp"
                android:layout_marginTop="5sp"

                android:textColor="@color/colorWhite"
                android:text="@string/ansSec"
                >

            </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>